FROM microsoft/dotnet:2.2-sdk AS build-env
COPY . /app
WORKDIR /app

RUN dotnet restore 
RUN dotnet publish -c Release -o out
 
# Build runtime image
FROM microsoft/dotnet:2.2-aspnetcore-runtime
ARG CONNECTION_STRING
ENV ConnectionString=$CONNECTION_STRING
ARG JWT_SECRET_KEY
ENV JwtSecretKey=$JWT_SECRET_KEY
ARG JWT_AUDIENCE
ENV JwtAudience=$JWT_AUDIENCE
ARG JWT_ISSUER
ENV JwtIssuer=$JWT_ISSUER

ARG SMTP_SERVER
ENV SmtpServer=$SMTP_SERVER
ARG SMTP_PORT
ENV SmtpPort=$SMTP_PORT
ARG SMTP_USERNAME
ENV SmtpUsername=$SMTP_USERNAME
ARG SMTP_PASSWORD
ENV SmtpPassword=$SMTP_PASSWORD

ARG MAILER_FROM_ADDRESS
ENV MailerFromAddress=$MAILER_FROM_ADDRESS
ARG FEEDBACK_RECIPIENTS
ENV FeedbackRecipients=$FEEDBACK_RECIPIENTS

ARG NETCORE_ENV
ENV ASPNETCORE_ENVIRONMENT=$NETCORE_ENV

WORKDIR /app
COPY --from=build-env /app/API/out .
ENTRYPOINT ["dotnet", "API.dll"]